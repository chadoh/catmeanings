<%= render @cat %>

<p>
  <%= link_to "Edit", edit_cat_path(@cat) %>
  |
  <%= link_to "Delete", @cat,
    method: :destroy,
    confirm: "Cats purr when they're dying. :-(  Are you sure you want to delete this cat?" %>
</p>

<hr>

<h3>Comments</h3>

<div data-behavior="comments">
  <%= render @comments %>
</div>

<%= render 'comments/form', comment: Comment.new(cat: @cat) %>
