<div class="cat">
  <h3><%= link_to_unless_current cat, cat %></h3>

  <small class="by-line">
    <strong><%= link_to cat.user, cat.user %></strong>
    shared
    <%= distance_of_time_in_words cat.created_at, Time.now %> ago
  </small>

  <%= link_to_unless_current image_tag(cat.image_url, alt: cat.name), cat %>

  <% if cat.user == current_user %>
    <div class="actions">
      <%= link_to fa_icon("pencil"), edit_cat_path(cat) %>
      <%= link_to fa_icon("times"), cat,
        method: :delete,
        confirm: "Cats purr when they're dying. :-(  Are you sure you want to delete this cat?" %>
    </div>
  <% end %>

  <p><%= cat.caption %></p>
</div>
