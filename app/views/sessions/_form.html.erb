<%= form_tag sessions_path, id: "new_session" do %>
  <%= label_tag :email %>
  <%= text_field_tag :email, params[:email], autofocus: true %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <p class="hint">Forget? <%= link_to "Reset your password", new_password_reset_path %>.</p>
  <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  <%= label_tag :remember_me %>
  <div class="actions"><%= submit_tag "Sign In", class: "button" %></div>
<% end %>
